[push]
  default = upstream

[color]
  branch = auto
  diff = auto
  status = auto

[user]
  name = Micke Lisinge
  email = hi@micke.me

[merge]
  defaultToUpstream = true

[alias]
  ci = commit
  co = checkout
  st = status -sb
  lg = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit --date=relative
  ctags = !.git/hooks/ctags
  deletemergedbranches = !gitdeletemergedbranches
  pushu = "!git push -u origin $(git rev-parse --abbrev-ref HEAD)"

[github]
  user = lisinge

[init]
  templatedir = ~/.git_template

[pull]
  rebase = true
[core]
  excludesfile = ~/.gitignore
  editor = nvr --remote-tab-wait-silent +'-tabmove' +'set bufhidden=delete'
